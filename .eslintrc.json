{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "generators": true
    },
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "extends": ["takla"]
}
