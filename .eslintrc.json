{
  "root": true,
  "extends": ["airbnb-base", "google"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "import"
  ],
  "env": {
    "browser": false,
    "node": true
  },
  "rules": {
    "comma-dangle": ["warn", "always-multiline"],
    "max-len": ["error", 140],
    "no-console": ["error"],
    "no-fallthrough": 0,
    "no-new": 0,
    "no-unreachable": 0,
    "object-curly-newline": 0,
    "require-jsdoc": 0,
    "semi": [
      "error",
      "never"
    ],
    "valid-jsdoc": 0
  }
}
